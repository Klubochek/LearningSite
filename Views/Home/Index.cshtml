@using Microsoft.AspNetCore.Identity;


@model List<Course>


<div class="jumbotron jumbotron-fluid position-relative overlay-bottom" style="margin-bottom: 90px;">
        <form asp-controller="Home" asp-action="Index" method="get">
            <div class="container text-center my-5 py-5">
                <h1 class="text-white mt-4 mb-4">Learn From Home</h1>
                <h1 class="text-white display-1 mb-5">Education Courses</h1>
                <div class="mx-auto mb-5" style="width: 100%; max-width: 600px;">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <button class="btn btn-outline-light bg-white text-body px-4" type="button" aria-expanded="false">
                                Courses
                            </button>
                        </div>

                        <input type="text" class="form-control border-light" style="padding: 30px 25px;" placeholder="Keyword" name="search" value="@ViewData["Search"]">
                        <div class="input-group-append">
                        <button type="submit" class="btn btn-secondary px-4 px-lg-5" >Search</button>
                        </div>

                    </div>
                </div>
            </div>
        </form>
</div>
<div class="container-fluid py-5">
    <div class="container py-5">
        <div class="row mx-0 justify-content-center">
            <div class="col-lg-8">
                <div class="section-title text-center position-relative mb-5">
                    <h6 class="d-inline-block position-relative text-secondary text-uppercase pb-2">Our Courses</h6>
                    <h1 class="display-4">Checkout New Releases Of Our Courses</h1>
                </div>
            </div>
        </div>
        <div class="row">
            @if (Model.Count != 0)
            {
                @foreach (Course course in Model)
                {
                    <div class="col-lg-4 col-md-6 pb-4">
                        <a class="courses-list-item position-relative d-block overflow-hidden mb-2" asp-controller="Courses" asp-action="Details" asp-route-id="@course.CourseId">
                            <img class="img-fluid" src="@course.Image" alt="">
                            <div class="courses-text">
                                <h4 class="text-center text-white px-3">
                                    @course.Name
                                </h4>
                                <div class="border-top w-100 mt-3">
                                    <div class="d-flex justify-content-between p-4">
                                        <span class="text-white"><i class="fa fa-user mr-2"></i>@course.Name</span>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                }
            }
            else
            {
                <div> Courses not found </div>
            }
        </div>
    </div>
</div>
